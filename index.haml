!!! 5
%html
  %head
    %title ASC - A Space Combat
    %script{:src => "env.js", :type => "text/javascript"}
    %script{:src => "lib/jquery-1.8.2.min.js", :type => "text/javascript"}
    %script{:src => "lib/jquery.cookies.2.2.0.min.js", :type => "text/javascript"}
    %script{:src => "lib/jslider/bin/jquery.slider.min.js", :type => "text/javascript"}
    %script{:src => "lib/sylvester-0.1.3.min.js", :type => "text/javascript"}
    %script{:src => "lib/prelude-browser-0.6.0.min.js", :type => "text/javascript"}
    %script{:src => "lib/Bacon.962acd54.min.js", :type => "text/javascript"}
    %script{:src => "main.js", :type => "text/javascript"}
    %script{:src => "ui.js", :type => "text/javascript"}
    %link{:rel => "stylesheet", :type => "text/css", :href => "lib/jslider/bin/jquery.slider.min.css"}
    %style{:type => "text/css"}
      :sass
        canvas
          background-color: #CCC
          float: left
        fieldset
          width: 200px
          float: left
          p:nth-child(2)
            margin-top: 0
        p
          margin-top: 2em
          margin-bottom: 0.75em
        h2
          margin-top: 1em
          margin-bottom: 0
          text-align: center
        h1.connected
          display: none
          color: #0C0
        h1.disconnected
          color: #900
        input[name=spawn]
          cursor: pointer
          border-radius: 3px
          border-color: #0F0
          background-color: #090
          width: 100%
          height: 3em
          color: #0F0
          font-weight: bold
          font-size: 1em
          &:hover
            background-color: #0A0
          &:disabled
            cursor: default
            border-color: #900
            background-color: #633
            color: #F00
  %body
    %h1.disconnected Disconnected
    %h1.connected Connected
    #viewport
    %fieldset
      %legend Ship setup
